<h1>Create a new portfolio item</h1>

<%= form_for(@portfolio_item) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, id: :portfolio_title %>
    </div>

    <div class="field">
      <%= f.label :subtitle %>
      <%= f.text_area :subtitle, id: :portfolio_body %>
    </div>

    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body, id: :portfolio_body %>
    </div>

    <ul>
      <%= f.fields_for :technologies do |technology_form| %>
        <li>
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name %>
        </li>
      <% end %>
    </ul>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
